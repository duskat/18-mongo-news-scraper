 {{> header }}
<main role="main" class="container">
  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
    <img class="mr-3" src="../../assets/brand/bootstrap-outline.svg" alt="" width="48" height="48">
    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100">{{title}}</h6>
      <small>Charlotte Observer Edition</small>
    </div>
  </div>
  {{#each data}}
  <div class="my-3 p-3 bg-white rounded box-shadow">
    <img src="{{this.img}}" />
    <h6 class="border-bottom border-gray pb-2 mb-0">{{this.title}}</h6>
    <div class="media text-muted pt-6">

      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark">
            <a href="{{this.link}}" target="_blank">{{this.link}}</a>
          </strong>
        </div>
        <div class="text">

         </div>
        <a class="btn btn-success addComment" data-id="{{this._id}}">Add comment</a>
        <a class="btn btn-warning wiewComment" data-id="{{this._id}}">View comments</a>
        <a class="btn btn-danger delete" data-id="{{this._id}}">Delete article</a>
      </div>
    </div>


  </div>

  {{/each}}
    {{#if isEmpty}}
  <div class="card text-center bg-light mb-3" style="width: 100%">
    <div class="card-body">
      <h5 class="card-title">Oops!..</h5>
      <p class="card-text">You did not save any article yet ðŸ˜Ÿ</p>
      <p class="card-text">Go <a href="/">ðŸ”™ </a>to the <a href="/">home page </a></p>
      <p class="card-text">And save the articles you like!  </a></p>
    </div>
  </div>
  {{/if}}
</main>